{
  "name": "acsplext",
  "displayName": "ACS-Motion-Control",
  "description": "Syntax highlighting is one strategy to improve the readability and context of the text, especially for code that spans several pages. The reader can easily ignore large sections of comments or code, depending on what they are looking for. If you program in ACSPL+ this extension is for you. Good luck!",
  "publisher": "ACSPL",
  "creator": "BarPopko",
  "version": "0.29.4",
  "icon": "images/logoacs.png",
  "license": "MIT",
  "engines": {
    "vscode": "^1.75.0"
  },
  "categories": [
    "Other",
    "Programming Languages"
  ],
  "activationEvents": [
    "onCommand:acspl.OpenMMI",
    "onCommand:acspl.OpenUserModeDrive",
    "onCommand:acspl.OpenUpdateCenter",
    "onCommand:acspl.OpenSoftwareGuides",
    "onCommand:acspl.OpenKnowledgeCenter",
    "onCommand:acspl.OpenTutorialVideos",
    "onCommand:acspl.JoinUs",
    "onCommand:acspl.OpenLinkedIn",
    "onCommand:acspl.DeveloperEmail",
    "onCommand:acspl.askAI"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "breakpoints": [
      {
        "language": "c"
      }
    ],
    "contributes": {
      "themes": [
        {
          "label": "MyTheme",
          "uiTheme": "vs-dark",
          "path": "./themes/my-theme.json"
        }
      ],
      "semanticTokenColors": {
        "variable": "#4FC1FF",
        "keyword": "#FF00FF",
        "type": "#9CDCFE"
      }
    },
    "commands": [
      {
        "command": "acspl.askQuestion",
        "category": "ACSPL+",
        "title": "askQuestion"
      },
      {
        "command": "acspl.OpenMMI",
        "category": "ACSPL+",
        "title": "Open MMI"
      },
      {
        "command": "acspl.OpenUserModeDrive",
        "category": "ACSPL+",
        "title": "Open User Mode Drive"
      },
      {
        "command": "acspl.OpenKnowledgeCenter",
        "category": "ACSPL+",
        "title": "Open Knowledge Center"
      },
      {
        "command": "acspl.OpenSoftwareGuides",
        "category": "ACSPL+",
        "title": "Open Software Guides folder"
      },
      {
        "command": "acspl.JoinUs",
        "category": "ACSPL+",
        "title": "Join The ACS Team"
      },
      {
        "command": "acspl.OpenTutorialVideos",
        "category": "ACSPL+",
        "title": "Open Update Center"
      },
      {
        "command": "acspl.OpenLinkedIn",
        "category": "ACSPL+",
        "title": "Open LinkedIn"
      },
      {
        "command": "acspl.DeveloperEmail",
        "category": "ACSPL+",
        "title": "Send email to the developer"
      },
      {
        "command": "acspl.monty",
        "category": "ACSPL+",
        "title": "Monty"
      }
    ],
    "languages": [
      {
        "id": "acsplext",
        "aliases": [
          "ascpl",
          "acsplext"
        ],
        "icon": {
          "light": "images/icon.png",
          "dark": "images/icon.png"
        },
        "extensions": [
          ".prg"
        ],
        "configuration": "./syntaxes/language-configuration.json"
      }
    ],
    "snippets": [
      {
        "language": "acsplext",
        "path": "./syntaxes/acspl.code-snippets"
      }
    ],
    "grammars": [
      {
        "language": "acsplext",
        "scopeName": "source.prg",
        "path": "./syntaxes/acsplext.tmLanguage.json"
      }
    ],
    "keybindings": [
      {
        "command": "acspl.OpenMMI",
        "key": "ctrl+9",
        "when": "editorTextFocus"
      },
      {
        "command": "acspl.OpenKnowledgeCenter",
        "key": "ctrl+F1",
        "when": "editorTextFocus"
      }
    ],
    "configuration": {
      "title": "ACSPL+ Extension",
      "properties": {
        "acspl.firebaseServiceAccountPath": {
          "type": "string",
          "default": "",
          "description": "Path to Firebase service account JSON file for Monty chat authentication"
        },
        "acspl.firebaseDatabaseURL": {
          "type": "string",
          "default": "",
          "description": "Firebase Realtime Database URL (e.g., https://your-project.firebaseio.com)"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/estree": "^1.0.6",
    "@types/glob": "^7.2.0",
    "@types/jquery": "^3.5.14",
    "@types/mocha": "^9.1.1",
    "@types/node": "^16.18.126",
    "@types/pdf-parse": "^1.1.4",
    "@types/ps-node": "^0.1.1",
    "@types/sizzle": "^2.3.9",
    "@types/vscode": "^1.69.0",
    "@typescript-eslint/eslint-plugin": "^5.31.0",
    "@typescript-eslint/parser": "^5.31.0",
    "@vscode/test-electron": "^2.1.5",
    "eslint": "^8.20.0",
    "typescript": "^5.8.2"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.68.0",
    "axios": "^1.8.3",
    "dotenv": "^17.2.3",
    "firebase-admin": "^13.6.0",
    "gcc": "^1.0.2",
    "gcc-min": "^7.3.0",
    "node-addon-api": "^5.0.0",
    "pdf-lib": "^1.17.1",
    "pdf-parse": "^1.1.1",
    "ps-node": "^0.1.6",
    "source-map-loader": "^4.0.0",
    "ts-loader": "^9.3.1"
  }
}
